%nav{class: 'top-bar', 'data-topbar' => '', 'role' => 'navigation'}
	%ul.title-area
		%li.name
			= link_to 'My site', root_url
	%section.top-bar-section
		%ul.right
			= if logged_in?
				%li.has-dropdown
					= link_to 'Users', '#'
					%ul.dropdown
						%li
							= link_to 'Profile', current_user
						%li
							= link_to 'Settings', '#'
						%li
							= link_to 'Log-out', logout_path, method: 'delete'
			- else
				%li.active
					= link_to 'Login', login_url